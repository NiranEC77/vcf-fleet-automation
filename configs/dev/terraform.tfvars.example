# VCF Fleet Configuration Example
# Copy this file to terraform.tfvars and update with your values

# VCF Provider Configuration
sddc_manager_host     = "192.168.1.10"
sddc_manager_username = "administrator@vsphere.local"
sddc_manager_password = "VMware1!"

# ESXi Hosts Configuration
esx_hosts = [
  {
    fqdn     = "esx01.dev.example.com"
    username = "root"
    password = "VMware1!"
  },
  {
    fqdn     = "esx02.dev.example.com"
    username = "root"
    password = "VMware1!"
  },
  {
    fqdn     = "esx03.dev.example.com"
    username = "root"
    password = "VMware1!"
  }
]

# Network Configuration - Management
management_gateway = "192.168.10.1"
management_mask    = "255.255.255.0"
management_subnet  = "192.168.10.0"
management_vlan    = 100
management_ip_start = "192.168.10.5"
management_ip_end   = "192.168.10.50"

# Network Configuration - vSAN
vsan_gateway = "192.168.11.1"
vsan_mask    = "255.255.255.0"
vsan_subnet  = "192.168.11.0"
vsan_vlan    = 101
vsan_ip_start = "192.168.11.5"
vsan_ip_end   = "192.168.11.50"

# Network Configuration - vMotion
vmotion_gateway = "192.168.12.1"
vmotion_mask    = "255.255.255.0"
vmotion_subnet  = "192.168.12.0"
vmotion_vlan    = 102
vmotion_ip_start = "192.168.12.5"
vmotion_ip_end   = "192.168.12.50"

# Network Configuration - VCF Automation
vcf_automation_gateway = "192.168.13.1"
vcf_automation_mask    = "255.255.255.0"
vcf_automation_subnet  = "192.168.13.0"
vcf_automation_vlan    = 103
vcf_automation_ip_start = "192.168.13.5"
vcf_automation_ip_end   = "192.168.13.50"

# Network Configuration - VCF Operations
vcf_operations_gateway = "192.168.14.1"
vcf_operations_mask    = "255.255.255.0"
vcf_operations_subnet  = "192.168.14.0"
vcf_operations_vlan    = 104
vcf_operations_ip_start = "192.168.14.5"
vcf_operations_ip_end   = "192.168.14.50"

# vCenter Configuration - Fleet Domain
vcenter_root_password = "VMware1!"
vcenter_vm_size       = "medium"
vcenter_storage_size  = "lstorage"
vcenter_ip            = "192.168.10.10"
vcenter_subnet_mask   = "255.255.255.0"
vcenter_gateway       = "192.168.10.1"
vcenter_fqdn          = "vcenter-fleet.dev.example.com"

# NSX Configuration - Fleet Domain
nsx_vip                        = "192.168.10.11"
nsx_vip_fqdn                   = "nsx-fleet.dev.example.com"
nsx_manager_admin_password     = "VMware1!"
nsx_form_factor                = "small"
## No NSX license key required for VCF 9 bootstrap (90-day eval)

# vCenter Configuration - Workload Domain
workload_vcenter_root_password = "VMware1!"
workload_vcenter_vm_size       = "medium"
workload_vcenter_storage_size  = "lstorage"
workload_vcenter_ip            = "192.168.20.10"
workload_vcenter_subnet_mask   = "255.255.255.0"
workload_vcenter_gateway       = "192.168.20.1"
workload_vcenter_fqdn          = "vcenter-workload.dev.example.com"

# NSX Configuration - Workload Domain
workload_nsx_vip                        = "192.168.20.11"
workload_nsx_vip_fqdn                   = "nsx-workload.dev.example.com"
workload_nsx_manager_admin_password     = "VMware1!"
workload_nsx_form_factor                = "small"
## No NSX license key required for VCF 9 bootstrap (90-day eval)

## No ESXi/vSAN license keys required for VCF 9 bootstrap (90-day eval)

# vSAN Configuration
vsan_failures_to_tolerate           = 1
workload_vsan_failures_to_tolerate  = 1

# Geneve Configuration
geneve_vlan_id           = 2
workload_geneve_vlan_id  = 3
